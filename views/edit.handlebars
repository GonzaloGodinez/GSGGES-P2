<div class="row mt-4">
  <div class="col-md-6">
    <h3>Edit Review:</h3>

    <form class="form edit-book-form">
      <input class="form-input" type="hidden" id="book-id" title="book-id" hidden value="{{id}}"/>
      <div class="form-group">
        <label for="book-title">book title:</label>
        <input class="form-input" type="text" id="book-title" title="book-title" value={{title}}/>
      </div>
      <div class="form-group">
        <label for="book-content">content:</label>
        <textarea class="form-input" id="book-content" name="book-content" value={{content}}>{{content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
    </form>
  </div>

</div>

<script src="/js/edit.js"></script>